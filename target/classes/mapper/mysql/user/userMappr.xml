<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lz.dao.UserDao">
	
	<resultMap id="BaseResultMap" type="com.lz.model.User" >
	    <id column="id" property="id" jdbcType="VARCHAR" />
	    <result column="user_name" property="userName" jdbcType="VARCHAR" />
	    <result column="password" property="password" jdbcType="VARCHAR" />
	    <result column="telPhone" property="telPhone" jdbcType="VARCHAR" />
	    <result column="sex" property="sex" jdbcType="VARCHAR" />
	</resultMap>
	
	<sql id="Base_Column_List" >
    	id, user_name, password,telPhone,sex
 	</sql>
	
	<!-- 根据用户名和密码查找用户 -->
	<select id="findUserByNameAndPs" parameterType="java.lang.String" resultMap="BaseResultMap">
		select 
			<include refid="Base_Column_List" />
		from 
			user 
		where 
			user_name = #{userName,jdbcType=VARCHAR} and password = #{password,jdbcType=VARCHAR}
	</select>
	
	<!-- 添加数据 -->
	<insert id="insertUser" parameterType="com.lz.model.User" useGeneratedKeys="true" keyProperty="id">
		insert into user(user_name,password,telPhone,sex) values(#{userName},#{password},#{telPhone},#{sex})
	</insert>
	
	
</mapper>